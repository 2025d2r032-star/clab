#include <stdio.h>
#include <math.h>

int main() {
    int num, original, rem, n = 0;
    double result = 0.0;

    printf("Enter an integer: ");
    scanf("%d", &num);

    original = num;

    // count digits
    while (original != 0) {
        original /= 10;
        n++;
    }

    original = num;

    // calculate sum of powers of digits
    while (original != 0) {
        rem = original % 10;
        result += pow(rem, n);
        original /= 10;
    }

    if ((int)result == num)
        printf("%d is an Armstrong number.\n", num);
    else
        printf("%d is not an Armstrong number.\n", num);

    return 0;
}
